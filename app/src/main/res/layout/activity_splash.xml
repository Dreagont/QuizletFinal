<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="18dp"
    tools:context=".SplashActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QuizLess"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#0535BF"/>
    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:src="@drawable/wall_image"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wellcome to QuizzLess"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/>
    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/blue_button_layout"
        android:text="Sign up for free"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:id="@+id/btnRegister"
        />
    <Button
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Or log in"
        android:textAllCaps="false"
        android:background="@drawable/trans_button_layout"
        android:id="@+id/btnLogin"
        />
</LinearLayout>